{
  "manifest_version": 3,
  "name": "return-youtube-live-username",
  "version": "1.0.0",
  "description": "YouTube ライブチャットで以前のユーザー名で表示されるようにします。",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
